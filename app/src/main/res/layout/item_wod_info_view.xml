<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.design.widget.TextInputLayout
		style="@style/RegistrationTextStyle">

		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/registration_wizard_wod_title"
			style="@style/RegistrationEditText"
			android:hint="@string/wod_wizard_description"/>
	</android.support.design.widget.TextInputLayout>

	<TextView
		style="@style/SpinnerHint"
		android:text="@string/registration_wizard_event_wod_count_hint"/>

	<android.support.v7.widget.AppCompatSpinner
		android:id="@+id/registration_wizard_wod_type"
		style="@style/Spinner"/>
</LinearLayout>