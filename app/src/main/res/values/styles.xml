<resources>


	<style name="RegistrationTextStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="RegistrationEditText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:lines">1</item>
		<item name="android:singleLine">true</item>
	</style>


	<style name="Button_MainAction">
		<item name="android:textColor">@null</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_width">192dp</item>
		<item name="android:layout_height">wrap_content</item>
		<!--<item name="android:textAppearance">@style/TextAppearance.CF.Button.MainAction</item>-->
	</style>

	<style name="Button_MainAction.RegNext">
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_marginBottom">16dp</item>
	</style>

	<style name="SpinnerHint">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:textAppearance">@style/TextAppearance.CF.Hint</item>
		<item name="android:textColor">@null</item>
	</style>

	<style name="Spinner" parent="Widget.CF.EditText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:spinnerMode">dropdown</item>
	</style>

	<style name="CardvIewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginTop">16dp</item>
	</style>

</resources>
